<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.springboot.dao.UserDao">
	
	<resultMap id="bbsResult2" type="UserDto">
		<result column="id" property="id" />
	<!-- 	<result column="writer" property="writer" /> -->
		<result column="password" property="password" />
	</resultMap>
	
	<select id="userlistDao2" resultMap="bbsResult2">
		select * from userlist_2
	</select>
	
	<select id="userlistDao" 
	parameterType="string"
	resultType="com.study.springboot.dto.UserDto">
		
		select 
			* 
		from 
			userlist_2 
		<!-- where 
		<![CDATA[ id < 3 ]]> -->
		order by 
			id 
	</select>
	
	<select id="userviewDao" 
		parameterType="string"
		resultType="com.study.springboot.dto.UserDto">
		
		select * from userlist_2 where id = #{param1}
	</select>
	
	<insert id="userwriteDao">
		insert into userlist_2 (row, id, password)
			values (userlist_2_seq.nextval,#{param1} 
			#{param2})
	</insert>
	
</mapper>	